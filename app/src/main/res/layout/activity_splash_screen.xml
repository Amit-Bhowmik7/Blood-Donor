<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mainmenu_actionbar_background"
    android:gravity="center"
    tools:context=".SplashScreen"
    android:orientation="vertical">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/mainmenu_topgrid_background"
        android:src="@drawable/mainlogo"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="রক্ত করি দান বাঁচাবো প্রাণ,"
        android:textColor="@color/text_color_white"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="আনবো মুখে খুশির বান।"
        android:textColor="@color/text_color_white"
        android:textSize="18sp"/>

    <ProgressBar
        android:id="@+id/progressbarid"
        android:progressBackgroundTint="#A10303"
        android:progressTint="#FFFF0B0B"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        />

</LinearLayout>